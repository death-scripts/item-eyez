<Window x:Class="Item_eyez.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importing" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Importing data..." Margin="0,0,0,10" FontSize="16" />
        <ProgressBar x:Name="progressBar" Width="300" Height="20" Minimum="0" />
    </StackPanel>
</Window>
