<Window x:Class="item_eyez.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:item_eyez"
        mc:Ignorable="d"
        MinHeight="500"
        MinWidth="800"
        Background="{StaticResource WindowBackgroundBrush}"
        Title="MainWindow">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Style="{DynamicResource MenuStyle1}">
            <MenuItem Header="File">
                <MenuItem Header="Reset Database"
                          Command="{Binding ResetDatabaseCommand}"/>
                <MenuItem Header="Populate Sample Data"
                          Command="{Binding PopulateSampleDataCommand}"/>
                <MenuItem Header="Import Legacy .accdb"
                          Command="{Binding ImportAccessCommand}"/>
            </MenuItem>
        </Menu>

        <!-- last child in DockPanel fills the rest by default -->
        <local:main_view/>
    </DockPanel>
</Window>
