<Window x:Class="item_eyez.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:item_eyez"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Background="{StaticResource WindowBackgroundBrush}"
        Title="MainWindow">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="HotPink" Offset="0" />
            <GradientStop Color="MediumAquamarine" Offset="1" />
        </LinearGradientBrush>
    </Window.Resources>
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <StackPanel>
        <Menu Style="{DynamicResource MenuStyle1}">
            <MenuItem Header="File">
                <MenuItem Header="Reset Database" Command="{Binding ResetDatabaseCommand}" />
                <MenuItem Header="Populate Sample Data" Command="{Binding PopulateSampleDataCommand}" />
            </MenuItem>
        </Menu>
        <local:main_view />
    </StackPanel>
</Window>
