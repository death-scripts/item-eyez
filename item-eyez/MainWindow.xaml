<Window
    x:Class="Item_eyez.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Item_eyez.Views"
    xmlns:vm="clr-namespace:Item_eyez.Viewmodels"
    Title="item-eyez"
    MinWidth="800"
    MinHeight="500"
    Background="{StaticResource WindowBackgroundBrush}"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Style="{DynamicResource MenuStyle1}">
            <MenuItem Header="File">
                <MenuItem Command="{Binding ResetDatabaseCommand}" Header="Reset Database" />
                <MenuItem Command="{Binding PopulateSampleDataCommand}" Header="Populate Sample Data" />
                <MenuItem Command="{Binding ImportAccessCommand}" Header="Import Legacy .accdb" />
            </MenuItem>
        </Menu>

        <!--  last child in DockPanel fills the rest by default  -->
        <views:Main_view />
    </DockPanel>
</Window>