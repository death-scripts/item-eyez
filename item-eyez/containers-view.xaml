<UserControl
    x:Class="item_eyez.containers_view"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:item_eyez"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="550"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:ContainersViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Margin="0,276,10,-89">
            <DataGrid
                Name="datagrid"
                Background="Pink"
                AlternatingRowBackground="LightBlue"
                AlternationCount="1"
                AutoGenerateColumns="False"
                CanUserDeleteRows="True"
                CanUserResizeColumns="True"
                CellEditEnding="datagrid_CellEditEnding"
                ItemsSource="{Binding Containers}"
                SelectedItem="{Binding SelectedContainer}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding name}" Header="Name" />
                    <DataGridTemplateColumn Header="Description">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding description}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridComboBoxColumn
                        DisplayMemberPath="Value"
                        Header="Is contained in"
                        ItemsSource="{Binding RoomContainerList}"
                        SelectedValueBinding="{Binding SelectedRoomOrContainerId}"
                        SelectedValuePath="Name" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <GroupBox Margin="0,0,10,452" Header="search filter">
            <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="0,103,528,356" Header="name">
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="277,104,181,279" Header="description">
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
        </GroupBox>
        <Button
            Margin="624,130,10,279"
            Command="{Binding AddContainerCommand}"
            Content="Add Container"
            Style="{StaticResource CustomAddButtonStyle}" />
    </Grid>
</UserControl>
