<UserControl
    x:Class="item_eyez.containers_view"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:item_eyez"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="550"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:ContainersViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Margin="0,276,10,-89">
            <DataGrid
                Name="datagrid"
                AlternatingRowBackground="LightBlue"
                AlternationCount="1"
                AutoGenerateColumns="False"
                Background="Pink"
                CanUserDeleteRows="True"
                CanUserResizeColumns="True"
                ItemsSource="{Binding Containers}"
                SelectedItem="{Binding SelectedContainerRow}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTemplateColumn Header="Description">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Container">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ContainedIn.Name}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                    DisplayMemberPath="Name"
                                    ItemsSource="{x:Static local:ItemEyezDatabase.Containers}"
                                    SelectedItem="{Binding ContainedIn, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Room">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StoredIn.Name}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                    DisplayMemberPath="Name"
                                    ItemsSource="{x:Static local:ItemEyezDatabase.Rooms}"
                                    SelectedItem="{Binding StoredIn, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <GroupBox Margin="0,0,528,452" Header="search filter">
            <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="0,103,528,356" Header="name">
            <TextBox
                local:EnterKeyBehavior.Command="{Binding AddContainerCommand}"
                local:FocusBehavior.IsFocused="{Binding NameFocused, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="277,104,181,279" Header="description">
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
        </GroupBox>
        <CheckBox
            Margin="448,128,239,0"
            VerticalAlignment="Top"
            Content="preserve"
            IsChecked="{Binding PreserveDescription}" />
        <Button
            Margin="624,130,10,279"
            Command="{Binding AddContainerCommand}"
            Content="Add Container"
            FontSize="23" />
        <GroupBox Margin="277,0,269,452" Header="put in container">
            <ComboBox
                local:ComboBoxBehavior.DropDownOpenedCommand="{Binding ContainersDroppedDownCommand}"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Containers}"
                SelectedItem="{Binding SelectedContainer}" />
        </GroupBox>
        <GroupBox Margin="536,0,10,452" Header="store in room">
            <ComboBox
                local:ComboBoxBehavior.DropDownOpenedCommand="{Binding RoomsDroppedDownCommand}"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Rooms}"
                SelectedItem="{Binding SelectedRoom}" />
        </GroupBox>
    </Grid>
</UserControl>
