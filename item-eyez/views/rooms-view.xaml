<UserControl
    x:Class="item_eyez.rooms_view"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:item_eyez"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="550"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:RoomViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Margin="0,276,10,-89">
            <DataGrid
                Background="Pink"
                Name="datagrid"
                RowBackground="SkyBlue"
                AlternatingRowBackground="LightBlue"
                AlternationCount="1"
                AutoGenerateColumns="False"
                CanUserDeleteRows="True"
                CanUserResizeColumns="True"
                ItemsSource="{Binding Rooms}"
                SelectedItem="{Binding SelectedRoom}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Header="Name" />
                    <DataGridTemplateColumn Header="Description">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <GroupBox Margin="0,0,10,452" Header="search filter">
            <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="0,103,528,356" Header="name">
            <TextBox
                local:EnterKeyBehavior.Command="{Binding AddRoomCommand}"
                local:FocusBehavior.IsFocused="{Binding NameFocused, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="277,104,152,279" Header="description">
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
        </GroupBox>
        <Button 
            FontSize="25"
            Margin="653,130,10,279"
            Command="{Binding AddRoomCommand}"
            Content="Add Room"/>
    </Grid>
</UserControl>
