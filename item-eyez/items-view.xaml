<UserControl
    x:Class="item_eyez.items_view"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:item_eyez"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1200"
    Height="550"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:ItemsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Margin="0,276,10,-89">
            <DataGrid
                Background="Pink"
                Name="datagrid"
                AlternatingRowBackground="LightBlue"
                AlternationCount="1"
                AutoGenerateColumns="False"
                CanUserDeleteRows="True"
                CanUserResizeColumns="True"
                CellEditEnding="datagrid_CellEditEnding"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding name}" Header="Name" />
                    <DataGridTemplateColumn Header="Description">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding description}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Catagories">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding categories}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding categories, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding value}" Header="Value" />
                    <DataGridTextColumn Header="Container" />
                    <DataGridTextColumn Header="Room" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <GroupBox Margin="0,0,715,452" Header="search filter">
            <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="485,0,378,452" Header="put in container">
            <ComboBox />
        </GroupBox>
        <GroupBox Margin="827,0,10,452" Header="put in room">
            <ComboBox />
        </GroupBox>
        <GroupBox Margin="0,103,1022,356" Header="name">
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="178,103,710,280" Header="description">
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
        </GroupBox>
        <GroupBox Margin="490,103,317,280" Header="Catagories">
            <TextBox Text="{Binding Catagories, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
        </GroupBox>
        <Button
            Margin="888,129,10,280"
            Command="{Binding AddItemCommand}"
            Content="Add Item"
            Style="{StaticResource CustomAddButtonStyle}" />
    </Grid>
</UserControl>
