<UserControl
    x:Class="item_eyez.items_view"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:item_eyez"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1200"
    Height="550"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:ItemsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Margin="0,276,10,-89">
            <DataGrid
                Name="datagrid"
                AlternatingRowBackground="LightBlue"
                AlternationCount="1"
                AutoGenerateColumns="False"
                Background="Pink"
                CanUserDeleteRows="True"
                CanUserResizeColumns="True"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name, UpdateSourceTrigger=LostFocus}" Header="Name" />
                    <DataGridTemplateColumn Header="Description">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding Description, UpdateSourceTrigger=LostFocus}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding Description, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Catagories">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Width="300"
                                    Text="{Binding Categories, UpdateSourceTrigger=LostFocus}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Width="300"
                                    Text="{Binding Categories, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
                    <DataGridTemplateColumn Header="Container">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ContainedIn.Name}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                    DisplayMemberPath="Name"
                                    ItemsSource="{x:Static local:ItemEyezDatabase.Containers}"
                                    SelectedItem="{Binding ContainedIn, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Room">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StoredIn.Name}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                    DisplayMemberPath="Name"
                                    ItemsSource="{x:Static local:ItemEyezDatabase.Rooms}"
                                    SelectedItem="{Binding StoredIn, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <GroupBox Margin="0,0,715,452" Header="search filter">
            <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=LostFocus}" />
        </GroupBox>
        <GroupBox Margin="485,0,378,452" Header="put in container">
            <ComboBox
                local:ComboBoxBehavior.DropDownOpenedCommand="{Binding ContainersDroppedDownCommand}"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Containers}"
                SelectedItem="{Binding SelectedContainer}" />
        </GroupBox>
        <GroupBox Margin="827,0,10,452" Header="store in room">
            <ComboBox
                local:ComboBoxBehavior.DropDownOpenedCommand="{Binding RoomsDroppedDownCommand}"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Rooms}"
                SelectedItem="{Binding SelectedRoom}" />
        </GroupBox>
        <GroupBox Margin="0,103,968,356" Header="name">
            <TextBox
                local:EnterKeyBehavior.Command="{Binding AddItemCommand}"
                local:FocusBehavior.IsFocused="{Binding NameFocused, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
        <GroupBox Margin="237,103,651,280" Header="description">
            <TextBox Text="{Binding Description, UpdateSourceTrigger=LostFocus}" TextWrapping="Wrap" />
        </GroupBox>
        <GroupBox Margin="554,103,317,280" Header="Catagories">
            <TextBox Text="{Binding Catagories, UpdateSourceTrigger=LostFocus}" TextWrapping="Wrap" />
        </GroupBox>
        <Button
            Margin="888,129,10,280"
            Command="{Binding AddItemCommand}"
            Content="Add Item"
            FontSize="25" />
    </Grid>
</UserControl>
